
//java script

function repeatletters(name,num)
{
    if (num<1) {
    console.log("Error: invalid num !");
    return "";
    }
    if (typeof(name) !== "string")
    {
    console.log("Error: input a name !");   
    return "";
    }
    let result = "";
    for ( let ch of name )
    {
        result += ch.repeat(num);
    }
  return result;
}

//C++

#include <iostream>
#include <string>
using namespace std;



string repeatletters (string name , int num);



int main () {
    cout<<repeatletters("ali",5);
}



string repeatletters (string name , int num )
{
   if (num<1)
   {
       cout<<"Error ! invalid number";
       return "";
   }
    string answer;
    for(char count : name){
        
        answer += string (num,count);
        
    }

    return answer;
}

